@{
    ViewBag.Title = "Contact";
}

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management</title>

    <style>
        a {
            padding: 1.3em 3em;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 2.5px;
            font-weight: 500;
            background-color: #343A40;
            border: none;
            border-radius: 45px;
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease 0s;
            cursor: pointer;
            outline: none;
            text-decoration-line: none;
            text-align: center;
            vertical-align: middle;
            color: black;
        }

            a:hover {
                background-color: #23c483;
                box-shadow: 0px 15px 20px rgba(46, 229, 157, 0.4);
                color: black;
                transform: translateY(-7px);
            }

            a:active {
                transform: translateY(-1px);
            }
        body {
            background: rgb(229,248,254);
            background: linear-gradient(145deg, rgba(229,248,254,1) 0%, rgba(0,115,238,1) 100%);
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;

            color: white;
        }

        .link {
            padding: 1.3em 3em;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 2.5px;
            font-weight: 500;
            color: #000;
            background-color: #fff;
            border: none;
            border-radius: 45px;
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease 0s;
            cursor: pointer;
            outline: none;
            text-decoration-line:none;
            text-align:center;
            vertical-align:middle;
        }

            .link:hover {
                background-color: #23c483;
                box-shadow: 0px 15px 20px rgba(46, 229, 157, 0.4);
                color: #fff;
                transform: translateY(-7px);
            }

            .link:active {
                transform: translateY(-1px);
            }

        .buttonWrapper {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            height: 75px;
            margin-top: 50px
        }

    </style>


</head>

<body>

    <header>

        <h1>Hello and welcome to the Inventory Management!</h1>

    </header>
    
    <main>

        <h3>Select one of these </h3>

        <div class="buttonWrapper">


            <a class="link" href="@Url.Action("Recipes", "VBS")">Recipes</a>
        


            <a class="link" href="@Url.Action("Stock", "VBS")">View stock</a>
          


        </div>





    </main>

    <footer>


    </footer>

</body>