@model List<VBS_FrontEnd.Models.InventoryNames>

<!DOCTYPE html>
<html>
<head>
    <title>Inventory</title>
    <style>
        body {
            background: rgb(229,248,254);
            background: linear-gradient(145deg, rgba(229,248,254,1) 0%, rgba(0,115,238,1) 100%);
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: white;
        }
        a {
            padding: 1.3em 3em;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 2.5px;
            font-weight: 500;
            background-color: #343A40;
            border: none;
            border-radius: 45px;
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease 0s;
            cursor: pointer;
            outline: none;
            text-decoration-line: none;
            text-align: center;
            vertical-align: middle;
            color: black;
        }
        a:hover {
            background-color: #23c483;
            box-shadow: 0px 15px 20px rgba(46, 229, 157, 0.4);
            color: black;
            transform: translateY(-7px);
        }
        a:active {
            transform: translateY(-1px);
        }
        .inventory-table {
            margin: 20px;
            border-collapse: collapse;
            width: 90%;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

            .inventory-table th, .inventory-table td {
                padding: 10px;
                text-align: left;
            }

            .inventory-table th {
                background-color: #343a40;
                color: #ffffff;
            }

            .inventory-table td {
                background-color: #ffffff;
                justify-content:center;
                vertical-align:middle;
            }

            .inventory-table img {
                width: 50px;
                height: 50px;
                object-fit: cover;
            }

            .inventory-table tr:nth-child(even) {
                background-color: #f2f2f2;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="my-4">Inventory</h1>
        <table class="inventory-table table table-bordered">
            <thead>
                <tr>
                    <th>Photo</th>
                    <th>Name</th>
                    <th>Group Name</th>
                    <th>Subgroup Name</th>
                    <th>Quantity</th>
                    <th>Stock Date</th>
                    <th>Expiry Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (VBS_FrontEnd.Models.InventoryNames item in Model)
                {
                    <tr>
                        <td><img src="~/Images/@item.PhotoUrl" alt="@item.Name" /></td>
                        <td>@item.Name</td>
                        <td>@item.GroupName</td>
                        <td>@item.SubgroupName</td>
                        <td>@(item.Quantity + "g")</td>
                        <td style="text-align: center; font-weight: bold">@item.StockDate.ToShortDateString()</td>
                        @if (VBS_FrontEnd.Controllers.VBSController.DateChecker(DateTime.Now, item.ExpiryDate))
                        {
                            if (item.ExpiryDate < DateTime.Now)
                            {
                                <td style="background-color: #FF6B6B; color: #FFFFFF; text-align:center; font-weight:bold">@item.ExpiryDate.ToShortDateString()</td>
                            }
                            else
                            {
                                <td style="background-color: #FFEB3B; color: #000000; text-align: center; font-weight: bold">@item.ExpiryDate.ToShortDateString()</td>
                            }
                        }
                        @if (!VBS_FrontEnd.Controllers.VBSController.DateChecker(DateTime.Now, item.ExpiryDate))
                        {
                            if (item.ExpiryDate < DateTime.Now)
                            {
                                <td style="background-color: #FF6B6B; color: #FFFFFF; text-align: center; font-weight: bold">@item.ExpiryDate.ToShortDateString()</td>
                            }
                            else
                            {
                                <td style="background-color: #4CAF50; color: #FFFFFF; text-align: center; font-weight: bold">@item.ExpiryDate.ToShortDateString()</td>
                            }
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
