@model List<VBS_FrontEnd.Models.Dish>
@{
    ViewBag.Title = "Recipes";
}

<h2>Recipes</h2>

    <style>
        a {
            padding: 1.3em 3em;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 2.5px;
            font-weight: 500;
            background-color: #343A40;
            border: none;
            border-radius: 45px;
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease 0s;
            cursor: pointer;
            outline: none;
            text-decoration-line: none;
            text-align: center;
            vertical-align: middle;
            color: black;
        }

            a:hover {
                background-color: #23c483;
                box-shadow: 0px 15px 20px rgba(46, 229, 157, 0.4);
                color: black;
                transform: translateY(-7px);
            }

            a:active {
                transform: translateY(-1px);
            }
        body {
            background: rgb(229,248,254);
            background: linear-gradient(145deg, rgba(229,248,254,1) 0%, rgba(0,115,238,1) 100%);
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: white;
        }
        .dish-container {
            display: flex;
            justify-content: left;
            flex-wrap: wrap;
            padding: 20px;
        }

        .dish-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            width: 22%;
            margin: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

            .dish-card:hover {
                transform: scale(1.05);
            }

        .dish-image {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }

        .dish-info {
            padding: 10px;
            text-align: center;
        }

        .dish-name {
            font-size: 1.2em;
            color: #555;
            margin: 10px 0 5px;
        }

        .dish-group {
            font-size: 0.9em;
            color: #888;
        }
        .dish-link{
            text-decoration-line:none;
            text-decoration:none;
        }
    </style>

    <div class="dish-container">
        @foreach (VBS_FrontEnd.Models.Dish dish in Model)
        {
            <div class="dish-card">
                <a href="@Url.Action("Recipe", "VBS", new { Id = dish.Id })" class="dish-link">
                    <img src="~/Images/@dish.PhotoUrl" alt="Gerecht Foto" class="dish-image">
                    <div class="dish-info">
                        <div class="dish-name">Name: @dish.Name</div>
                        <div class="dish-group">Gewicht: @dish.UnitInStock</div>
                    </div>
                </a>
            </div>
        }
    </div>