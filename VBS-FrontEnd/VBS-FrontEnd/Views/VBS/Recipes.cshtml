@model List<VBS_FrontEnd.Models.Dish>
@{
    ViewBag.Title = "Recipes";
}

<h2>Recipes</h2>

    <style>

        .dish-container {
            display: flex;
            justify-content: left;
            flex-wrap: wrap;
            padding: 20px;
        }

        .dish-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            width: 22%;
            margin: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

            .dish-card:hover {
                transform: scale(1.05);
            }

        .dish-image {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }

        .dish-info {
            padding: 10px;
            text-align: center;
        }

        .dish-name {
            font-size: 1.2em;
            color: #555;
            margin: 10px 0 5px;
        }

        .dish-group {
            font-size: 0.9em;
            color: #888;
        }
    </style>

    <div class="dish-container">
        @foreach (VBS_FrontEnd.Models.Dish dish in Model)
        {
            <div class="dish-card">
                <img src="~/Images/@dish.PhotoUrl" alt="Gerecht Foto" class="dish-image">
                <div class="dish-info">
                    <div class="dish-name">Name: @dish.Name</div>
                    <div class="dish-group">Gewicht: @dish.UnitInStock</div>
                </div>
            </div>
        }
    </div>