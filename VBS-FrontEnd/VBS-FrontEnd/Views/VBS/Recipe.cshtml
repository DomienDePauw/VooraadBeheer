@model List<VBS_FrontEnd.Models.Dish>
@{
    ViewBag.Title = "Recipe";
}

<h2>Recipes</h2>

<style>
    .recipe-container {
        padding: 20px;
        background-color: #f2f2f2; /* Added background color for better visualization */
        width: 100%;
    }

    .dish-container {
        gap: 20px;
        padding: 20px;
        width: 100%;
    }

    .dish-card {
        border: 1px solid #ddd;
        width: 100%;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
    }

        .dish-card:hover {
            transform: scale(1.05);
        }

    .dish-image {
        width: 100%;
        height: 350px; /* Adjusted height for better display */
        object-fit: cover;
    }

    .dish-info {
        padding: 10px;
        text-align: center;
    }

    .dish-name {
        font-size: 1.2em;
        color: #555;
        margin: 10px 0 5px;
    }

    .group {
        width:50%
    }
    .requirement {
        width: 50%
    }
    .groups-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 10px;
        margin-top: 20px;
        width:100%;
        float:right;
    }
    .requirements-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 10px;
        margin-top: 20px;
        width: 100%;
    }
    .requirement-item {
        border: 1px solid #ddd;
        padding: 10px;
        height: 3rem;
    }
    .groups {
        border: 1px solid #ddd;
        padding: 10px;
        height: 3rem;
    }
    .grids {
        display: flex;
        justify-content: left;
        flex-wrap: wrap;
    }
</style>

<div class="recipe-container">
    <div class="dish-container">
        <div class="dish-card">
            <img src="~/Images/@Model[0].PhotoUrl" alt="Gerecht Foto" class="dish-image">
            <div class="dish-info">
                <div class="dish-name">Name: @Model[0].Name</div>
                <div class="dish-name">Gewicht: @Model[0].UnitInStock</div>
            </div>
            <div class="grids">
                <div class="requirement">
                    <h2>Requirements</h2>
                    <div class="requirements-grid">
                        @for (int i = 0; i < Model[0].Requirements.Count; i++)
                        {
                            <div class="requirement-item">
                                @($"{Model[0].Requirements[i]}:    {Model[0].QuantityPer100GramAmount[i]}g")
                            </div>
                        }
                    </div>
                </div>
                <div class="group">
                    <h2>Type</h2>
                    <div class="groups-grid">
                        <div class="groups">
                            group:dit
                        </div>
                        <div class="groups">
                            Subgroup:dat
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>